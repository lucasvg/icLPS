                        "about": "Informe o período do aluno.",
                        "rules": {
                            "required": true,
                            "maxlength": 2,
                        }
                    },
                    {
                        "type": "text",
                        "name": "curriculum",
                        "label": "Upload do CV",
                        "about": "Faça o upload do Curriculum Vitae (.pdf).",
                        "rules": {
                            "required": true,
                            "maxlength": 255,
                        }
                    },
                    {
                        "type": "text",
                        "name": "transcript",
                        "label": "Upload do Boletim",
                        "about": "Faça o upload do Boletim Escolar.",
                        "rules": {
                            "required": true,
                            "maxlength": 255,
                        }
                    },
                    {
                        "type": "text",
                        "name": "lattes",
                        "label": "Lattes",
                        "about": "Insira o link para o lattes do aluno.",
                        "rules": {
                            "required": true,
                            "maxlength": 512,
                        }
                    }
                ]
            },
            {
                "label": "Dados da Bolsa",
                "description": "Preencha as informações sobre a bolsa do novo Aluno",
                "inputs": [
                    {
                        "type": "text",
                        "name": "orientador",
                        "label": "Orientador",
                        "about": "Selecione o orientador do aluno.",
                        "rules": {
                            "required": true,
                            "maxlength": 255,
                            "lettersonly": true
                        }
                    },
                    {
                        "type": "text",
                        "name": "projectTitle",
                        "label": "Título do Projeto",
                        "about": "Preencha o título do projeto do aluno.",
                        "rules": {
                            "required": true,
                            "maxlength": 255,
                            "lettersonly": true
                        }
                    },
                    {
                        "type": "textarea",
                        "name": "projectDescription",
                        "label": "Descrição do Projeto",
                        "about": "Descreva o projeto do aluno.",
                        "rules": {
                            "required": true,
                            "maxlength": 512,
                            "lettersonly": true
                        }
                    },
                    {
                        "type": "text",
                        "name": "type",
                        "label": "Tipo de Aluno",
                        "about": "Selecione o perfil do aluno.",
                        "rules": {
                            "required": true,
                            "maxlength": 255,
                        }
                    },
                    {
                        "type": "date",
                        "name": "endDateProject",
                        "label": "Data de Término do Projeto",
                        "about": "Informe a data de término do projeto.",
                        "rules": {
                            "required": true,
                        }
                    },
                    {
                        "type": "text",
                        "name": "scholarshipType",
                        "label": "Tipo de Bolsa",
                        "about": "Informe o tipo da bolsa do aluno.",
                        "rules": {
                            "required": true,
                            "maxlength": 255,
                        }
                    },
                    {
                        "type": "date",
                        "name": "startDateScholarship",
                        "label": "Data de Início da Bolsa",
                        "about": "Informe a data de início da bolsa.",
                        "rules": {
                            "required": true,
                        }
                    },
                    {
                        "type": "date",
                        "name": "endDateScholarship",
                        "label": "Data de Término da Bolsa",
                        "about": "Informe a data de término da bolsa.",
                        "rules": {
                            "required": true,
                        }
                    }
                ]
            }
        ]
    }
}